{
  "name": "web-highlighter",
  "version": "0.7.4",
  "description": "‚ú®A no-runtime dependency lib for text highlighting & persistence on any website ‚ú®üñçÔ∏è",
  "main": "dist/web-highlighter.min.js",
  "types": "dist/index.d.ts",
  "browser": "dist/web-highlighter.min.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test/**.spec.ts",
    "coverage": "nyc -r lcov -e .ts -x \"test/**/*.ts\" npm run test",
    "serve-example": "http-server example/static",
    "serve": "http-server -p 8081 ./dist",
    "watch": "webpack --config ./config/webpack.config.prod.js --watch",
    "build-example": "target=example node script/build.js",
    "static": "run-p watch serve",
    "start": "node script/dev.js",
    "build:types": "tscpaths -p tsconfig.json -s ./src -o ./dist",
    "build:code": "node script/build.js",
    "build": "run-s build:code build:types",
    "prepublishOnly": "run-s lint build test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "homepage": "https://alienzhou.github.io/web-highlighter",
  "repository": {
    "type": "git",
    "url": "https://github.com/alienzhou/web-highlighter"
  },
  "keywords": [
    "text",
    "highlight",
    "web",
    "persistence",
    "lightweight",
    "selection",
    "range"
  ],
  "author": "alienzhou <alienzhou16@163.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/jsdom": "^27.0.0",
    "@types/jsdom-global": "^3.0.7",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "better-opn": "^3.0.2",
    "chai": "^6.2.2",
    "chalk": "^5.6.2",
    "clean-webpack-plugin": "^4.0.0",
    "coveralls": "^3.1.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "fs-extra": "^11.3.3",
    "html-webpack-plugin": "^5.6.6",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "showdown": "^2.1.0",
    "sinon": "^21.0.1",
    "style-loader": "^4.0.0",
    "text-replace-html-webpack-plugin": "^1.0.3",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tscpaths": "0.0.9",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": ">=5.2.3",
    "webpack-merge": "^6.0.1"
  }
}
